<%- include('../partials/header'); -%>


<hr>

<div class="container">

    <h1 style="text-align: center;">ADD NEW COMMENT TO <%= campground.name %> </h1>
    <div style="width: 35%; margin : 30px auto;">
        <form action="/campgrounds/<%= campground._id %>/comments" method="POST">

            <div class="form-group">
                 <input class="form-control" type="text" name="comment[text]" placeholder="text">
            </div>

            <div class="form-group">
                <button class="btn btn-primary btn-lg btn-block">SUBMIT!</button>
            </div>
        </form>
        <a href="/campgrounds/<%= campground._id %>" class="btn btn-warning btn-sm">GO BACK</a>
    </div>
    
</div>


<%- include('../partials/footer'); -%> 